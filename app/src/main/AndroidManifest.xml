<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.natallia.radaman.tastysearchkakaoexample"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TastySearchKakaoApp"
        tools:ignore="GoogleAppIndexingWarning"
        android:theme="@style/Theme.AppCompat"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".search.SearchActivity"
            android:label="@string/search_title"/>
        <activity
            android:name=".searchResults.SearchResultsActivity"
            android:label="@string/results_title"/>
        <activity
            android:name=".favourites.FavouritesActivity"
            android:label="@string/favorites_title"/>
        <activity
            android:name=".recipe.RecipeActivity"
            android:label="@string/recipe_title"/>
        <activity
            android:name=".recentIngredients.RecentIngredientsActivity"
            android:label="@string/recent_ingredients_title"/>
    </application>

</manifest>
